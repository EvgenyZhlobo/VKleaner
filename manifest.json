{
	"name": "VKleaner",
	"version": "0.5.3",
	"description": "Chrome extension for vk.com that hides unwanted posts. You can define types of posts that will be hided.",
	
	"background_page" : "background.html",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "popup/icon.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["http://vk.com/*", "http://vkontakte.ru/*"],
		"css": ["css/vk.feed.css"],
		"js": ["js/jquery.js", "js/vk.feed.js"]
	}]
}
