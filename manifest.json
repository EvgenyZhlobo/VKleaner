{
	"name": "VKleaner",
	"version": "0.5.4",
	"description": "Chrome extension for vk.com that hides unwanted posts. You can define types of posts that will be hided.",
	
	"icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
	},
	"background_page" : "background.html",
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "img/icon-19.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["http://vk.com/*", "http://vkontakte.ru/*"],
		"css": ["css/vk.feed.css"],
		"js": ["js/jquery.js", "js/vk.feed.js"]
	}]
}
