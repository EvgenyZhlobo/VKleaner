{
  "name": "VKleaner",
  "version": "1.6.3",
  "description": "__MSG_description__",
  "default_locale": "en",

  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },

  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "img/icon-19.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["http://vk.com/*"],
    "css": ["css/feed.css"],
    "js": ["js/jquery.js", "js/common.js", "js/feed.functions.js", "js/feed.js"]
  }],

  "manifest_version": 2
}
